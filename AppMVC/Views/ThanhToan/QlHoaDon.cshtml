@model IEnumerable<AppData.Models.HoaDon>

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Admin Dashboard</title>
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
	<style>
		body {
			display: flex;
			height: 100%;
			margin: 0;
		}

		.sidebar {
			width: 250px;
			background-color: #343a40;
			color: white;
			flex-shrink: 0;
			display: flex;
			flex-direction: column;
			padding: 20px;
		}

			.sidebar .nav-link {
				color: white;
				margin: 10px 0;
			}

				.sidebar .nav-link.active {
					background-color: #495057;
					border-radius: 5px;
				}

		.content {
			flex-grow: 1;
			padding: 20px;
			background-color: #f8f9fa;
			overflow-y: auto;
		}

			.content h2 {
				margin-top: 0;
			}
	</style>
</head>
<body>
	<div class="d-flex">
		<div class="sidebar d-flex flex-column">
			<h4>Admin quản lý</h4>
			<ul class="nav nav-pills flex-column mb-auto">
				<li class="nav-item">
					<a class="nav-link" asp-controller="TaiKhoan" asp-action="Index">
						<i class="fas fa-users"></i> Quản lý Tài Khoản
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-controller="SanPham" asp-action="Index">
						<i class="fas fa-box"></i> Quản lý sản phẩm
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link active" asp-controller="ThanhToan" asp-action="QlHoaDon" aria-current="page">
						<i class="fas fa-shopping-cart"></i> Quản lý đơn hàng
					</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" asp-controller="DanhMuc" asp-action="Index">
						<i class="fas fa-list"></i> Quản lý danh Mục
					</a>
				</li>
				<li class="nav-item">
					<a href="#" class="nav-link">
						<i class="fas fa-tachometer-alt"></i> Dashboard
					</a>
				</li>
				<li class="nav-item">
					<a href="#" class="nav-link">
						<i class="fas fa-cogs"></i> Cài đặt
					</a>
				</li>
				<li>
					<a class="nav-link" class="btn btn-outline" asp-controller="TaiKhoan" asp-action="LogOut">
						<i class="fas fa-sign-out-alt"></i> Đăng xuất
					</a>
				</li>
			</ul>
		</div>
		<div class="content">
			<h2>Quản lý hóa dơn</h2>
			<div class="d-flex">
				@using (Html.BeginForm())
				{
					<p></p>
					<div class="form-group form-inline">
						Tìm kiếm : @Html.TextBox("TimDM", "", new {@class="form-control"})
						<input type="submit" class="btn btn-default" value="Tìm kiếm" />
					</div>
				}
			</div>
			<div class="row">
				<table class="table">
					<thead>
						<tr>
							@*<th>
								@Html.DisplayNameFor(model => model.Id)
							</th>*@
							<th>
								@Html.DisplayNameFor(model => model.Username)
							</th>
							@*<th>
								@Html.DisplayNameFor(model => model.IdMaGiamGia)
							</th>*@
							<th>
								@Html.DisplayNameFor(model => model.TenNguoiNhan)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.SoDienThoai)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.DiaChi)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.NgayMua)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.TrangThaiDonHang)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.TrangThaiThanhToan)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.tien)
							</th>
							<th>
								@Html.DisplayNameFor(model => model.Status)
							</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								@*<td>
									@Html.DisplayFor(modelItem => item.Id)
								</td>*@
								<td>
									@Html.DisplayFor(modelItem => item.Username)
								</td>
								@*<td>
									@Html.DisplayFor(modelItem => item.IdMaGiamGia)
								</td>*@
								<td>
									@Html.DisplayFor(modelItem => item.TenNguoiNhan)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.SoDienThoai)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.DiaChi)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.NgayMua)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.TrangThaiDonHang)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.TrangThaiThanhToan)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.tien)
								</td>
								<td>
									@Html.DisplayFor(modelItem => item.Status)
								</td>
								<td>
									@Html.ActionLink("Update", "Update", new { id=item.Id }) |
									@Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

