@model AppData.ViewModels.GioHangCTViewModel
@{
    ViewData["Title"] = "ThanhToan";
}

<div class="row">
    <div class="col-md-12">
        <h1>Thanh toán</h1>
        <p>Hãy kiểm tra thông tin của bạn cho chính xác</p>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <form action="@Url.Action("AddHoaDon","ThanhToan")" method="post">
            <div class="form-group">
                <label>Họ và tên khách hàng</label>
                <input type="text" id="tenKH" name="tenKH" class="form-control" />
            </div>
            <div class="form-group">
                <label>Số điện thoại</label>
                <input type="text" id="sdt" name="sdt" class="form-control" />
            </div>
            <div class="form-group">
                <label>Địa chỉ</label>
                <input type="text" id="diachi" name="diachi" class="form-control" />
            </div>
            <div class="form-group">
                <label>Phương thức thanh toán</label>
                <select class="form-control" name="TrangThaiThanhToan">
                    <option value="1" selected>Thanh toán khi nhận hàng</option>
                    <option value="2">Chuyển khoản</option>
                </select>
            </div>
            @* <input type="hidden" name="cartDetail" value="model" /> *@
            <button type="submit" class="btn btn-primary">Thanh Toán</button>
        </form>
    </div>
    <div class="col-md-4">
        <div style="border:1px solid #808080">
            <table>
                <thead>
                    <tr>
                        <th>Tên sản phẩm</th>
                        <th>Giá sản phẩm </th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.gioHangCTs)
                    {
                        <tr>
                            <td>@item.SanPham.TenSP</td>
                            <td>@item.SanPham.GiaSP</td>
                            <td>@item.SoLuong</td>
                            <td>@((item.SanPham.GiaSP * item.SoLuong).ToString("c"))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <h3>Tổng tiền</h3>
        <h4>@Model.TongTiens()</h4>
    </div>
</div>

